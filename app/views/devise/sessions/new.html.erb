<%= stylesheet_link_tag 'sign_in.css', :media => "all" %>
<h2 class="text-center">bibliopola</h2>
<div style="text-align: center">
<%= image_tag '本のアイコン素材.png' %>
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <p class="text">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </p>
  </div>

  <div class="field">
    <p class="text">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
    </p>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <p class="text">
      <%= f.check_box :remember_me %>
      <%= f.label :ログインしたままにする %>
      </p>
    </div>
  <% end %>

  <div class="actions">
    <p class="text">
    <%= f.submit "ログイン" %>
    </p>
  </div>
<% end %>

<div class="links">
  <p class="text">
<%= render "devise/shared/links" %>
  </p>
</div>